<%= content_tag :tr, class: "media", id: "bookmark-#{bookmark.url}" do %>
  <!-- <td><%#= link_to "#{bookmark.url}", "#{bookmark.url}" %></td> -->

  <div class="thumbnail">
    <img src="" alt="...">
    <% embedly = disp_embedly(bookmark.url) %>
      <%= link_to embedly[:url], :target => '_blank' do %>
      <%= image_tag embedly[:thumbnail_url] %>
    <% end %>
  </div>

  <% if current_user %>
    <td><%= link_to "Edit", edit_topic_bookmark_path(bookmark.topic, bookmark) %></td>
    <td><%= link_to "Delete", [bookmark.topic, bookmark], method: :delete %></td>
    <td><%= render partial: 'likes/like', locals: { bookmark: bookmark } %></td>
  <% end %>
<% end %>
