<h3>My Bookmarks</h3>
<div class="row">
  <div class="col-md-8">
    <% @user_bookmarks.each do |topic, bookmarks| %>
      <h4><%= link_to topic.title, topic_path(topic) %></h4>
      <div class="media">
        <div class="media-body">
          <table class="table table-hover">
            <tbody>
              <tr class='js-items'>
                <% bookmarks.each do |bookmark| %>
                  <%= render partial: 'bookmarks/bookmark', locals: { topic: bookmark.topic, bookmark: bookmark} %>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </div>
</div>

