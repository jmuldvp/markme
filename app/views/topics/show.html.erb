<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.title %></p>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
  </div>
</div>

<h3>My Bookmarks</h3>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <tbody>
            <tr class='js-items'>
              <%= render @bookmarks %>
              <!-- <%#= render partial: 'bookmarks/bookmark', locals: { topic: @bookmark.topic, bookmark: @bookmark} %> -->
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
